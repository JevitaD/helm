	steps {
		/*withKubeConfig(caCertificate: '', clusterName: '', contextName: '', credentialsId: 'k8s-config', namespace: '', serverUrl: '') {*/
			sh 'kubectl apply -f MyAwesomeApp/springboot-lb.yaml'
	/*   }*/
 
	}
  }
  /*

}
}
